<section id="reports" class="section reports" aria-labelledby="reports-title">
  <div class="section-header">
    <div class="section-header__row">
      <h2 id="reports-title">活動報告</h2>
      <a class="section-header__link" href="/articles/">記事一覧</a>
    </div>
  </div>
  <div class="reports-controls" role="tablist" aria-label="カテゴリ">
    <button type="button" class="reports-tab is-active" data-category="volunteer" role="tab" aria-selected="true">ボランティア</button>
    <button type="button" class="reports-tab" data-category="upcoming" role="tab" aria-selected="false">イベント予定</button>
    <button type="button" class="reports-tab" data-category="review" role="tab" aria-selected="false">イベントの様子</button>
    <button type="button" class="reports-tab" data-category="coverage" role="tab" aria-selected="false">取材</button>
    <button type="button" class="reports-tab" data-category="others" role="tab" aria-selected="false">その他</button>
  </div>
  <div class="reports-slider" data-reports-slider>
    <div class="reports-track" data-reports-track></div>
  </div>
  <div class="reports-meta">
    <p class="reports-counter" data-reports-counter aria-live="polite"></p>
    <div class="reports-pagination" data-reports-pagination aria-label="ページナビゲーション"></div>
  </div>
</section>

